<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPrescriptionFragment"
    android:background="#EAEBED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Prescription"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="times"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Prescription"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="times"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16sp"
                android:textColor="#7366FF"
                android:layout_margin="10dp"
                android:fontFamily="times"
                android:drawableRight="@drawable/ic_right_arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Prescription"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="times"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Informations"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F7F7"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Full Name"
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drug List"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Type"
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/selectdrugspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Mg / Mi"
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Dose"
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Duration"
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Advice Comment "
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Drug"
                android:textColor="@color/white"
                android:background="@drawable/save_btn"
                android:layout_gravity="right"
                android:layout_margin="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tests List"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/selecttestsspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Discriptions "
                android:padding="8dp"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="10dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Test"
                android:textColor="@color/white"
                android:background="@drawable/save_btn"
                android:layout_gravity="right"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Create Prescription"
                android:textColor="@color/white"
                android:background="@drawable/save_btn"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:padding="10dp"/>


        </LinearLayout>





    </LinearLayout>

</ScrollView>