<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterAllAdminFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new User"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="times"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#7366FF"
                android:textSize="16sp"
                android:fontFamily="times"
                android:drawableRight="@drawable/ic_right_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new User"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="times"/>
        </LinearLayout>

]        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Registeration"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="times"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F7F7"/>


                <ImageView
                    android:id="@+id/img_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image"
                    android:layout_gravity="center"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/txt_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Image / Click To Upload"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="times"/>
            <EditText
                android:id="@+id/register_first_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:layout_margin="10dp"
                android:fontFamily="times"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <EditText
                android:id="@+id/register_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <EditText
                android:id="@+id/register_user_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <EditText
                android:id="@+id/register_user_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Mobile No"
                android:inputType="phone"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>


        </LinearLayout>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/genderspinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/regisiter_user_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Date Of Birth"
            android:inputType="text|date"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"
            android:drawableRight="@drawable/date"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/languagesspinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/nationalityspinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/cityspinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/register_user_zip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Zipcode"
            android:inputType="number"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/usertypespinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/specilizationspinner"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/register_user_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="User Name"
            android:inputType="textEmailAddress"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <EditText
            android:id="@+id/register_user_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Password"
            android:inputType="number"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>



        <EditText
            android:id="@+id/register_user_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Address"
            android:inputType="text"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <EditText
            android:id="@+id/register_user_bio"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Bio"
            android:inputType="text"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_user_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Register"
            android:textColor="@color/white"
            android:background="@drawable/save_btn"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>


    </LinearLayout>










</ScrollView>