<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patientregistration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Patient"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="times"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#7366FF"
                android:textSize="16sp"
                android:fontFamily="times"
                android:drawableRight="@drawable/ic_right_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Patient"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="times"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="times"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F7F7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_layout"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/patient_imgupload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image"
                    android:layout_gravity="center"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/txt_ulploadimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Image / Click To Upload"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="times"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <EditText
                    android:id="@+id/patient_fname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    android:fontFamily="times"
                    android:padding="10dp"
                    android:background="@drawable/information_barder_layout"
                    android:textAlignment="viewStart"/>
                <EditText
                    android:id="@+id/patient_lname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/information_barder_layout"
                    android:textAlignment="viewStart"/>
                <EditText
                    android:id="@+id/patient_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/information_barder_layout"
                    android:textAlignment="viewStart"/>
                <EditText
                    android:id="@+id/patient_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Mobile No"
                    android:inputType="phone"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/information_barder_layout"
                    android:textAlignment="viewStart"/>
                <EditText
                    android:id="@+id/pastient_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Birthday"
                    android:inputType="phone"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/information_barder_layout"
                    android:textAlignment="viewStart"
                    android:drawableRight="@drawable/date"/>


            </LinearLayout>
            <Spinner
                android:layout_gravity=""
                android:layout_width="match_parent"
                android:id="@+id/genderspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:layout_margin="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/martialstatusspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/bloodgroupspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/patient_weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Patient Weight"
                android:inputType="number"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <EditText
                android:id="@+id/patient_height"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Patient Height"
                android:inputType="text|date"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"
                />

            <EditText
                android:id="@+id/patient_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Address"
                android:inputType="text"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <EditText
                android:id="@+id/patient_history"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Patient History"
                android:inputType="text"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EAEBED"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Information"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Known Diseases"
                android:padding="10dp"
                android:textSize="16sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/knowndiseasesspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family History"
                android:padding="10dp"
                android:textSize="16sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/familyhistoryzspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diseases"
                android:padding="10dp"
                android:textSize="16sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/diseasesspinner"
                android:layout_height="40dp"
                android:background="@drawable/spinner_languages"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Periods"
                android:padding="10dp"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/patient_period"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Period"
                android:inputType="text"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/information_barder_layout"
                android:textAlignment="viewStart"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/patient_register_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Register Patient"
                android:textColor="@color/white"
                android:background="@drawable/save_btn"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>




</ScrollView>