<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintPrescriptionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Doctor Clinic"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:textStyle="bold"
       android:textAlignment="center"
       android:layout_margin="10dp"
       android:fontFamily="times"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
             android:fontFamily="times"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Mobile : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_patient_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:fontFamily="times"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Email : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_patient_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7C59FF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Drug List"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Type : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_drug_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug  : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine ML : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_drug_intaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Dose : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_drug_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Duration : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_drug_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Comments : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_doctor_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="textEnd"
            android:fontFamily="times"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7C59FF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Test List"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Recommended : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_test_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="textEnd"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Discriptions : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
        <TextView
            android:id="@+id/print_test_discriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:fontFamily="times"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7C59FF"/>

    <Button
        android:id="@+id/btn_send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/save_btn"/>










    </LinearLayout>



</ScrollView>