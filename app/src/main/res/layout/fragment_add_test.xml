<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTestFragment"
    android:background="#F4F7F7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tests"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="times"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Tests"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="times"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#7366FF"
            android:textSize="16sp"
            android:fontFamily="times"
            android:drawableRight="@drawable/ic_right_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tests"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tests"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="times"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F7F7" />
        <EditText
            android:id="@+id/edit_test_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Test Name"
            android:inputType="textPersonName"
            android:layout_margin="10dp"
            android:fontFamily="times"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <EditText
            android:id="@+id/edit_test_descriptions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Discription"
            android:inputType="textPersonName"
            android:layout_margin="10dp"
            android:fontFamily="times"
            android:padding="10dp"
            android:background="@drawable/information_barder_layout"
            android:textAlignment="viewStart"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_test"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:textColor="@color/white"
            android:background="@drawable/save_btn"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Tests"
            android:textSize="16sp"
            android:fontFamily="times"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search :"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="times"
                android:layout_marginTop="20dp"/>
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/information_barder_layout"
                android:layout_margin="6dp"
                android:padding="0dp"
                android:hint="Search by Drug Id or Trade / Generic Name"/>

        </LinearLayout>






    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F7F7" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/test_recyclerview"
        android:layout_margin="10dp"/>



    </LinearLayout>


</ScrollView>